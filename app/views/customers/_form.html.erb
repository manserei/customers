<%= simple_form_for @customer do |f| %>
  <%= f.input :first_name, :placeholder => "Please enter your first name", :hint => "You better use your real first name!" %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :birthday,
        :start_year => Time.now.year,
        :end_year => Time.now.year - 100,
        :include_blank => true %>
  <%= f.submit %>
<% end %>
